{
  "scheming_version": 1,
  "group_type": "group",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "fields": [
    {
      "field_name": "title",
      "label": "Name",
      "validators": "not_empty unicode_safe",
      "form_snippet": "large_text.html",
      "form_attrs": {"data-module": "slug-preview-target"},
      "form_placeholder": "My case study"
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode_safe name_validator group_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "my-organization"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "validators": "not_empty",
      "form_placeholder": "A detail information about the case study"
    },
    {
      "field_name": "url",
      "label": "Image URL",
      "form_snippet": "organization_upload.html",
      "form_placeholder": "http://example.com/my-image.jpg"
    },
    {
      "field_name": "author",
      "label": "Author",
      "form_snippet": "large_text.html",
      "form_placeholder": "The person creating the case study",
      "output_validators": "not_empty"
    },
    {
      "field_name": "author_email",
      "label": "Author email",
      "form_snippet": "large_text.html",
      "form_placeholder": "Email of the person creating the case study",
      "output_validators": "not_empty"
    }
  ]
}
